.chartLinha{ height:230px;width:725px;}

/*COMPONENTES*/
.assinaturaBrq {display:block; margin:30px auto;}

/*Formulário*/
select {height: 20px; margin:5px 10px;}

/*Tabela*/
table {width:100%; border:0; padding:0; margin:0;}
th {border-bottom:1px solid #666666; padding:5px; font-weight:normal; text-align:left;}
td {padding:5px; color:#CCCCCC; font-weight:lighter;}
tr.off {background-color:#444444;}

/*Links*/
.button {display:block; width:100%; height:64px; background: url(../imagens/buttons.png) no-repeat left top;}
.bt_index {background-position:0 0;}
.bt_index:hover {background-position:-120px 0;}
.bt_configs {background-position:0 -64px; height:60px;}
.bt_configs:hover {background-position:-120px -64px;}

/*Menu Opções*/
ul.options {padding:0; margin:0; display:block; clear:both;}
ul.options li {display:block; height:47px; width:100%; line-height:47px; background: -webkit-gradient(linear, 0 0%, 0 90%, from(#dfdfdf), to(#cfcfcf));}
ul.options li.highlight {background: -webkit-gradient(linear, 0 0%, 0 90%, from(#CCCCCC), to(#BBBBBB));}
ul.options li a {display:block; margin:0 20px; color:#666666; text-decoration: none;}

/*Atualização*/
.smallBoxText {margin-top: 25px; text-align:center; font-size:12px; font-weight:lighter;}
.smallBoxText strong {font-size:36px;;}

/*Indicadores*/
.indicadorUP, .indicadorDown, .indicadorStill {display:inline-block; margin:10px 0 0 10px; width:50px; height:50px; background: url(../imagens/indicadores.png) no-repeat left top;}
.indicadorDown {background-position: -50px 0;} 
.indicadorStill {background-position: -100px 0;}
.indicadorValue {display:inline-block; font-size:18px; font-weight:lighter;}
.indicadorValue strong {font-size:60px;}

/*Bandeira*/
.flag {display:block; width:38px; height:38px; position:absolute; top:0; right:0; background: url(../imagens/flags.png) no-repeat left top;}
.flagClose {background-position: 0 -38px;}
.flagClose:hover {background-position: -38px -38px;}
.flagFilter {background-position: 0 -76px;}
.flagFilter:hover {background-position: -38px -76px;}

/*floater*/
.floater {position:absolute; width:740px; height:244px; margin:-122px 0 0 -370px; left:50%; top:50%; -webkit-box-shadow: 0px 0px 10px #000000;}

/*CHARTS*/
/* Termometros */
.thermometer {position:relative; width:100%; padding:10px 0;}
.glass {width:60px; height:190px; margin:auto; position:relative; overflow:hidden; background-color:#666666; border-radius: 5px; border:5px solid #FFFFFF; -webkit-box-shadow: 0 0 5px #999999;}
.temperature {width:60px; height:20%; position:absolute; bottom:0; left:0; background-color:#00AAEE; -webkit-box-shadow:0px 0 10px #000000;}
.measure {width:60px; height:100%; background: url(../imagens/csso.png) no-repeat left bottom; position:absolute; bottom:0; left:0; -webkit-box-shadow: inset 0px 0px 80px #000000;}
.warm {background-color: #FFCC11;}
.hot {background-color: #FF0000;}
.glass .meta {position:absolute; width:100%; background: url(../imagens/tempMetaChart.png) no-repeat top right; height:14px; margin-bottom:-7px;}
.metaValue {position:absolute; top:45%; width:30px; margin:-20px 0 0 -70px; left:50%; height:40px;}
.metaValue label {text-align:right; display:block; float:right; font-size:14px;}
.metaValue span {text-align:right; color:#00AAEE; display:block; float:right; font-size:18px;}
.metaValue span strong {font-size:25px;}
.valorReal {position:absolute; top:45%; width:30px; margin:-20px 0 0 40px; height:40px; left:50%;}
.valorReal label {text-align:right; display:block; float:left; font-size:14px; line-height:14px; height:14px;}
.valorReal span {text-align:right; display:block; float:left; font-size:18px; line-height:35px; height:35px;}
.valorReal span strong {font-size:25px;}