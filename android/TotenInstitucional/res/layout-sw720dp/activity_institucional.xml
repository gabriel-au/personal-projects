<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutInstitucional"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="top"
    android:background="@drawable/fundo_internas" >


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        
        <ImageButton
	        android:id="@+id/button1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
	        android:padding="85dp"
	        android:layout_marginTop="273dp"
	        android:layout_marginLeft="87dp"
	        android:adjustViewBounds="true"
	        android:background="@drawable/rounded_button"
	        android:scaleType="fitEnd" />
        
        <ImageButton
	        android:id="@+id/button2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
	        android:padding="85dp"
	        android:layout_marginTop="400dp"
	        android:layout_marginLeft="246dp"
	        android:adjustViewBounds="true"
	        android:background="@drawable/rounded_button"
	        android:scaleType="fitEnd" />
        
        <ImageButton
	        android:id="@+id/button3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
	        android:padding="85dp"
	        android:layout_marginTop="525dp"
	        android:layout_marginLeft="87dp"
	        android:adjustViewBounds="true"
	        android:background="@drawable/rounded_button"
	        android:scaleType="fitEnd" />
        
        <ImageButton
	        android:id="@+id/button4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
	        android:padding="85dp"
	        android:layout_marginTop="646dp"
	        android:layout_marginLeft="246dp"
	        android:adjustViewBounds="true"
	        android:background="@drawable/rounded_button"
	        android:scaleType="fitEnd" />
        
        <ImageButton
	        android:id="@+id/button5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
	        android:padding="90dp"
	        android:layout_marginTop="747dp"
	        android:layout_marginLeft="47dp"
	        android:adjustViewBounds="true"
	        android:background="@drawable/rounded_button_selected"
	        android:scaleType="fitEnd" />

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="950dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/rounded_button_back" />
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="80dp"
            android:textSize="40dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Institucional" />
        
        <RelativeLayout
	        android:id="@+id/relativeLayoutContentInstitucional"
	        android:layout_width="1390dp"
	        android:layout_height="850dp"
	        android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="480dp"
            android:layout_marginTop="180dp"
            android:background="@android:color/transparent" >
	        
            <TextView
	            android:id="@+id/textViewInstitucionalTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="1dp"
	            android:layout_marginTop="1dp"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:text="" />
            
            <View
				 android:id="@+id/lineInstitucionalTitle"
				 android:layout_below="@id/textViewInstitucionalTitle"
				 android:layout_width="match_parent"
				 android:layout_height="1dp"
				 android:layout_marginTop="5dp"
				 android:background="#3D3D39" />
            
            <WebView
				android:id="@+id/webviewBoxMissao"
				android:layout_below="@id/lineInstitucionalTitle"
				android:layout_width="690dp"
	            android:layout_height="190dp"
	            android:layout_marginTop="10dp"
	            android:visibility="invisible"
	            android:background="@drawable/rounded_text_box" />
            
            <!-- <TextView
	            android:id="@+id/textViewInstitucionalVisao"
	            android:layout_below="@id/lineInstitucionalTitle"
	            android:layout_width="690dp"
	            android:layout_height="200dp"
	            android:layout_marginTop="400dp"
	            android:paddingTop="10dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingBottom="10dp"
	            android:background="@drawable/rounded_text_box"
	            android:text="@string/institucional_visao_box" /> -->

            <WebView
                android:id="@+id/webViewBoxTexto1"
                android:layout_below="@id/webviewBoxMissao"
                android:layout_width="690dp"
                android:layout_height="700dp"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:scrollbars="none" />
            
            <WebView
                android:id="@+id/webViewBoxTexto2"
                android:layout_below="@id/lineInstitucionalTitle"
                android:layout_width="690dp"
                android:layout_height="700dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="710dp"
                android:visibility="invisible"
                android:scrollbars="none" />
                
		</RelativeLayout>
        

    </RelativeLayout>

</LinearLayout>