	/*     */
	/*     */private int montarLista(Body body, int inicio, JurisprudenciaPojo pojo)
	/*     */throws SystemException
	/*     */{
		/* 184 */Div div = new Div("arredondado");
		/*     */
		/* 186 */A a = new A("Pagina?p=Jurisprudencia&m=detalhar&parametro="
				+ inicio,
		/* 187 */true, "arredondado");
		/*     */
