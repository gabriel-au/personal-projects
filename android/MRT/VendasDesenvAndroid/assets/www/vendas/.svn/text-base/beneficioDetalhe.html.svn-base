	<script src="../includes/js/actions.js"></script>
	<script>
		function marcaBeneficio(idBeneficio, objeto){			
			if(idBeneficio == 'P'){				
				$('#headerPrazo').html('* ' +  'Prazo'); 
				$('#desconto').html('Desc.');
			}else{
				$('#desconto').html('* ' + 'Desc.');
				$('#headerPrazo').html('Prazo'); 
			}
		}
	</script>
</head>
